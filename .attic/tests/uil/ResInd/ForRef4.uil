module Test
        version = 'v1.0'
        names = case_sensitive

  include file "ForRef4.msg";

  procedure
          exit_test();
	  Report_Callback(string);

  value
	  wheat			     : color('wheat');
	  navy			     : color('navy');

  object                                  ! The main window widget.
          TopManager : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  XmLabel    			Label;
    	      };
  	  };
value
	blue: color('blue');
	green: color('green');
        Red: color ('Red');

  object
        Label :  XmLabel {
            arguments {
		XmNunitType = Xm1000TH_INCHES;
                XmNwidth =  2000;
                XmNborderWidth =  10;
                XmNbackground =  blue;
                XmNforeground =  green;
                XmNtraversalOn =  true;
                XmNhighlightOnEnter =  true;
                XmNhighlightThickness =  30;
                XmNhighlightColor =  Red;
                XmNlabelString =  compound_string ("This is a Label");
                XmNrecomputeSize =  false;
		XmNtranslations = translation_table(translate_string);
            };
	    callbacks {
		XmNhelpCallback = procedure Report_Callback('help is here');
	    };
        };

value
	translate_string : '<Btn3Down>:Help()';

end module;
