module Test
        version = 'v1.0'
        names = case_sensitive

  procedure
	  Report_Dtcallback();

  value
	  wheat			     : color('wheat');
	  navy			     : color('navy');

  object                                  ! The main window widget.
          S_MAIN_WIDGET : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  DtTerm    		Term;
		  XmScrollBar 		Scroll_bar;
   	      };
  	  };

  value
        turquoise: color ('turquoise');
        black: color ('black');
        violet: color ('violet');

  object
	Scroll_bar:  XmScrollBar {
		arguments {
			XmNheight = 310;
			XmNshadowThickness = 1;
			XmNborderWidth = 3;
			XmNsliderSize = 100;
			XmNincrement = 3;
	  };
	};


  object
        Term:	  DtTerm {
            arguments {
		DtNblinkRate = 100;
		DtNbaseHeight = 100;
		DtNbaseWidth = 100;
		DtNc132 = false;
		DtNshadowType = DtSHADOW_OUT;
		DtNpointerBlank = false;
		DtNpointerColorBackground = turquoise;
		DtNmarginBell = false;
		DtNnMarginBell = false;
		DtNvisualBell = false;
		DtNjumpScroll = true;
		DtNsubprocessExec = true;
		DtNtermDeviceAllocate = true;
!		DtNreverseWrap = false;
!		DtNautoWrap = true;
!		DtNappKeypadDefault = false;
!		DtNappCursorDefault = false;
		DtNverticalScrollBar = Scroll_bar;
		DtNjumpScroll = true;

            };
	callbacks {
		DtNsubprocessTerminationCallback = procedure Report_Dtcallback();
		};
        };


end module;
