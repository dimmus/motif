module Test
        version = 'v1.0'
        names = case_sensitive

  include file "spinBox.msg";

  procedure
          exit_test();
	  Report_Callback(string);

  value
	  wheat			     : color('wheat');
	  navy			     : color('navy');

  object                                  ! The main window widget.
          S_MAIN_WIDGET : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  XmBulletinBoardDialog 	explanation;
                  XmSpinBox	    		Spin_Box;
   	      };
  	  };

  value
        sky_blue: color ('sky blue');
        black: color ('black');
        midnight_blue: color ('midnight blue');
	goldenrod: color ('goldenrod');

  object
        Spin_Box :  XmSpinBox {
            arguments {
		XmNarrowLayout = XmARROWS_SPLIT;
		XmNarrowOrientation = XmARROWS_HORIZONTAL;
		XmNmarginWidth = 100;
		XmNmarginHeight = 100;
		XmNspacing = 75;
		XmNpositionType = XmPOSITION_VALUE;
!		XmNwrap = 0;
!		XmNlosingFocusCallback = 1;
		XmNnavigationType = XmTAB_GROUP;
                XmNbackground = goldenrod;
		XmNforeground = midnight_blue;
		XmNtraversalOn = true;
!		XmNindeterminateInsensitivePixmap = ?;
		XmNspinBoxChildType = XmNUMERIC;
		XmNincrementValue = 1;
		XmNmaximumValue = 100;
		XmNminimumValue = -100;
		XmNposition = 0;
            };
        };

object
	explanation : XmBulletinBoardDialog {
			arguments {
				  XmNx = 500;
				  XmNy  = 0;
				  XmNdefaultPosition = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  };
			controls  {
				  XmPushButton	pushb1;
      				  XmLabel	        label1;
				  XmText		text1;
			    	  };
                 };

object
	pushb1 :	XmPushButton {
			arguments {
				  XmNx = 0;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
			 	  XmNlabelString = compound_string("Exit");
				  };
			callbacks {
				  XmNarmCallback = procedure exit_test();
				  };
		};

object
	label1 : XmLabel {
			arguments {
				  XmNx = 60;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNlabelString = compound_string("Explanation of Widget Displayed");
				  };
		};


object
	text1 : XmText {
			arguments {
				  XmNx = 0;
				  XmNy = 40;
				  XmNheight = 250;
				  XmNwidth = 300;
				  XmNwordWrap = true;
				  XmNeditMode = XmMULTI_LINE_EDIT;
				  XmNeditable = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNvalue = message;
				  };

		};
end module;
