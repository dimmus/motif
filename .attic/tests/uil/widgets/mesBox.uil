module Test
        version = 'v1.0'
        names = case_sensitive

  include file "mesBox.msg";

  procedure
          exit_test();
	  Report_Callback(string);

  object                                  ! The main window widget.
          S_MAIN_WIDGET : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  XmBulletinBoardDialog 	explanation;
                  XmMessageBox    		Message_Box;
    	      };
  	  };

  value
        forest_green: color ('forestgreen');

  object
        Message_Box :  XmMessageBox {
            arguments {
		XmNwidth = 400;
		XmNheight = 400;
                XmNborderWidth =  4;
                XmNbackground =  forest_green;
                XmNforeground =  white;
                XmNshadowThickness =  5;
                XmNautoUnmanage =  false;
                XmNnoResize =  true;
                XmNmessageString =  compound_string ("The Message Box");
		XmNmessageAlignment = XmALIGNMENT_END;
            };
            callbacks {
		XmNokCallback = procedure Report_Callback
				('okCallback');
		XmNcancelCallback = procedure Report_Callback
				('cancelCallback');
		XmNhelpCallback = procedure Report_Callback
				('helpCallback');
            };
	    controls {
		Xm_Message {
			arguments {
				XmNlabelString = compound_string
						 ("Override (The Message Box)");
			};
		};
		Xm_Symbol {
			arguments {
				XmNlabelPixmap = palette;
				XmNmarginWidth = 75;
				XmNmarginHeight = 75;
			};
		};
		Xm_OK unmanaged {
			arguments {
				XmNbackground = blue;
			};
		};
             };
        };


object
	explanation : XmBulletinBoardDialog {
			arguments {
				  XmNx = 500;
				  XmNy  = 0;
				  XmNdefaultPosition = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  };
			controls  {
				  XmPushButton	pushb1;
      				  XmLabel	        label1;
				  XmText		text1;
			    	  };
                 };

object
	pushb1 :	XmPushButton {
			arguments {
				  XmNx = 0;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
			 	  XmNlabelString = compound_string("Exit");
				  };
			callbacks {
				  XmNarmCallback = procedure exit_test();
				  };
		};

object
	label1 : XmLabel {
			arguments {
				  XmNx = 60;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNlabelString = compound_string("Explanation of Widget Displayed");
				  };
		};


object
	text1 : XmText {
			arguments {
				  XmNx = 0;
				  XmNy = 40;
				  XmNheight = 370;
				  XmNwidth = 300;
				  XmNwordWrap = true;
				  XmNeditMode = XmMULTI_LINE_EDIT;
				  XmNeditable = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNvalue = message;
				  };

		};
end module;
