module Test
        version = 'v1.0'
        names = case_sensitive

  include file "scrollWin2.msg";

  procedure
          exit_test();
	  Report_Callback(string);

  value
	  wheat			     : color('wheat');
	  navy			     : color('navy');

  object                                  ! The main window widget.
          S_MAIN_WIDGET : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  XmBulletinBoardDialog 	explanation;
                  XmScrolledWindow    		Scrolled_Window;
  	      };
  	  };

  value
	yellow: color ('yellow');


  object v_ScrollBar : XmScrollBar {
                arguments {
                        XmNorientation = XmVERTICAL;
                };
                callbacks {
                };
      };

  object h_ScrollBar : XmScrollBar {
                arguments {
                        XmNorientation = XmHORIZONTAL;
                };
                callbacks {
                };
      };

  object
        Scrolled_Window :  XmScrolledWindow {
            arguments {
		XmNx = 5;
                XmNy = 100;
                XmNwidth = 200;
                XmNheight = 200;
                XmNscrollBarDisplayPolicy = XmSTATIC;
                XmNscrollingPolicy = XmAPPLICATION_DEFINED;
                XmNhorizontalScrollBar = XmScrollBar h_ScrollBar;
                XmNverticalScrollBar = XmScrollBar v_ScrollBar;
            };
	    controls {
		XmDrawingArea   canvas;
                XmScrollBar h_ScrollBar;
                XmScrollBar v_ScrollBar;

	    };
        };

 object
     canvas : XmDrawingArea {
        arguments {
                XmNwidth = 400;
                XmNheight = 400;
		XmNbackground = yellow;
                };
         callbacks {
         };
	 controls {
		XmArrowButton	arrowb;
	 };
     };

  object
     arrowb : XmArrowButton {
	arguments {
		XmNwidth = 400;
		XmNheight = 400;
	};
  };

object
	explanation : XmBulletinBoardDialog {
			arguments {
				  XmNx = 500;
				  XmNy  = 0;
				  XmNdefaultPosition = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  };
			controls  {
				  XmPushButton	pushb1;
      				  XmLabel	        label1;
				  XmText		text1;
			    	  };
                 };

object
	pushb1 :	XmPushButton {
			arguments {
				  XmNx = 0;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
			 	  XmNlabelString = compound_string("Exit");
				  };
			callbacks {
				  XmNarmCallback = procedure exit_test();
				  };
		};

object
	label1 : XmLabel {
			arguments {
				  XmNx = 60;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNlabelString = compound_string("Explanation of Widget Displayed");
				  };
		};


object
	text1 : XmText {
			arguments {
				  XmNx = 0;
				  XmNy = 40;
				  XmNheight = 275;
				  XmNwidth = 300;
				  XmNwordWrap = true;
				  XmNeditMode = XmMULTI_LINE_EDIT;
				  XmNeditable = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNvalue = message;
				  };

		};
end module;
