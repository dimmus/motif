module Test
        version = 'v1.0'
        names = case_sensitive

  include file "formDia.msg";

  procedure
          exit_test();
	  Report_Callback(string);

  value
	  wheat			     : color('wheat');
	  navy			     : color('navy');

  object                                  ! The main window widget.
          S_MAIN_WIDGET : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  XmBulletinBoardDialog 	explanation;
                  XmFormDialog    		Form_Dialog;
    	      };
  	  };

  value
        blue: color ('blue');
        black: color ('black');
	variable: font('variable');

  object
        Form_Dialog :  XmFormDialog {
            arguments {
                XmNwidth =  250;
                XmNheight =  250;
		XmNautoUnmanage = false;
                XmNbackground =  blue;
                XmNdialogTitle =  compound_string ("The Form Dialog");
            };
	    controls {
		XmPushButton PB1;
		XmPushButton PB2;
		XmPushButton PB3;
		XmPushButton PB4;
		XmPushButton PB5;
		XmPushButton PB6;
	    };
        };


  object
	PB1:	XmPushButton {
	    arguments {
		XmNbottomAttachment = XmATTACH_FORM;
		XmNleftAttachment = XmATTACH_FORM;
		XmNrightAttachment = XmATTACH_FORM;
		XmNfontList = variable;
	    };
	    callbacks {
		XmNactivateCallback = procedure Report_Callback
				('activateCallback PB1');
	    };
	};


  object
	PB2:	XmPushButton {
	    arguments {
		XmNbottomAttachment = XmATTACH_WIDGET;
		XmNrightAttachment = XmATTACH_FORM;
		XmNleftAttachment = XmATTACH_FORM;
		XmNbottomWidget = XmPushButton PB1;
		XmNrightOffset = 100;
		XmNleftOffset = 100;
		XmNfontList = variable;
	    };
	    callbacks {
		XmNactivateCallback = procedure Report_Callback
				('activateCallback PB2');
	    };
	};


  object
	PB3:	XmPushButton {
	    arguments {
		XmNbottomAttachment = XmATTACH_WIDGET;
		XmNbottomWidget = XmPushButton PB2;
		XmNrightAttachment = XmATTACH_FORM;
		XmNtopAttachment = XmATTACH_WIDGET;
		XmNtopWidget = XmPushButton PB5;
		XmNfontList = variable;
	    };
	    callbacks {
		XmNactivateCallback = procedure Report_Callback
				('activateCallback PB3');
	    };
	};


  object
	PB4:	XmPushButton {
	    arguments {
		XmNbottomAttachment = XmATTACH_WIDGET;
		XmNbottomWidget = XmPushButton PB2;
		XmNleftAttachment = XmATTACH_FORM;
		XmNtopAttachment = XmATTACH_WIDGET;
		XmNtopWidget = XmPushButton PB5;
		XmNfontList = variable;
	    };
	    callbacks {
		XmNactivateCallback = procedure Report_Callback
				('activateCallback PB4');
	    };
	};


  object
	PB5:	XmPushButton {
	    arguments {
		XmNtopAttachment = XmATTACH_WIDGET;
		XmNrightAttachment = XmATTACH_FORM;
		XmNleftAttachment = XmATTACH_FORM;
		XmNtopWidget = XmPushButton PB6;
		XmNrightOffset = 100;
		XmNleftOffset = 100;
		XmNfontList = variable;
	    };
	    callbacks {
		XmNactivateCallback = procedure Report_Callback
				('activateCallback PB5');
	    };
	};


  object
	PB6:	XmPushButton {
	    arguments {
		XmNtopAttachment = XmATTACH_FORM;
		XmNleftAttachment = XmATTACH_FORM;
		XmNrightAttachment = XmATTACH_FORM;
		XmNfontList = variable;
	    };
	    callbacks {
		XmNactivateCallback = procedure Report_Callback
				('activateCallback PB6');
	    };
	};


object
	explanation : XmBulletinBoardDialog {
			arguments {
				  XmNx = 500;
				  XmNy  = 0;
				  XmNdefaultPosition = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  };
			controls  {
				  XmPushButton	pushb1;
      				  XmLabel	        label1;
				  XmText		text1;
			    	  };
                 };

object
	pushb1 :	XmPushButton {
			arguments {
				  XmNx = 0;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
			 	  XmNlabelString = compound_string("Exit");
				  };
			callbacks {
				  XmNarmCallback = procedure exit_test();
				  };
		};

object
	label1 : XmLabel {
			arguments {
				  XmNx = 60;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNlabelString = compound_string("Explanation of Widget Displayed");
				  };
		};


object
	text1 : XmText {
			arguments {
				  XmNx = 0;
				  XmNy = 40;
				  XmNheight = 450;
				  XmNwidth = 300;
				  XmNwordWrap = true;
				  XmNeditMode = XmMULTI_LINE_EDIT;
				  XmNeditable = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNvalue = message;
				  };

		};
end module;
