module Test
        version = 'v1.0'
        names = case_sensitive

  include file "panedWin.msg";

  procedure
          exit_test();
	  Report_Callback(string);

  value
	  wheat			     : color('wheat');
	  navy			     : color('navy');

  object                                  ! The main window widget.
          S_MAIN_WIDGET : XmBulletinBoard {

              arguments {
                  XmNx = 0;
                  XmNy = 0;
              };
    	      controls {
                  XmBulletinBoardDialog 	explanation;
                  XmPanedWindow    		Paned_Window;
    	      };
  	  };

  value
        sky_blue: color ('sky blue');
        black: color ('black');
	maroon: color ('maroon');
	white: color ('white');

  object
        Paned_Window :  XmPanedWindow {
            arguments {
                XmNwidth =  250;
                XmNheight =  250;
                XmNborderWidth =  2;
                XmNmarginWidth =  10;
                XmNmarginHeight =  10;
                XmNspacing =  20;
                XmNsashWidth =  250;
                XmNsashHeight =  20;
                XmNsashShadowThickness =  5;
		XmNseparatorOn = false;
            };
	    controls {
		XmPushButton	push_button1;
		XmPushButton	push_button2;
		XmToggleButton  toggle_button1;
	    };
        };

! /**************************************************************************/
object
	push_button1 :	XmPushButton {
	  arguments {
		XmNwidth = 230;
		XmNheight = 100;
		XmNbackground = maroon;
		XmNforeground = white;
	  };
	};

object
	push_button2 :	XmPushButton {
	  arguments {
		XmNwidth = 230;
		XmNheight = 100;
		XmNbackground = maroon;
		XmNforeground = white;
		XmNpaneMaximum = 100;
	  };
	};

object
	toggle_button1 :	XmToggleButton {
	  arguments {
		XmNwidth = 230;
		XmNheight = 100;
		XmNbackground = maroon;
		XmNforeground = white;
		XmNpaneMinimum = 100;
	  };
	};
!/***************************************************************************/

object
	explanation : XmBulletinBoardDialog {
			arguments {
				  XmNx = 500;
				  XmNy  = 0;
				  XmNdefaultPosition = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  };
			controls  {
				  XmPushButton	pushb1;
      				  XmLabel	        label1;
				  XmText		text1;
			    	  };
                 };

object
	pushb1 :	XmPushButton {
			arguments {
				  XmNx = 0;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
			 	  XmNlabelString = compound_string("Exit");
				  };
			callbacks {
				  XmNarmCallback = procedure exit_test();
				  };
		};

object
	label1 : XmLabel {
			arguments {
				  XmNx = 60;
				  XmNy = 0;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNlabelString = compound_string("Explanation of Widget Displayed");
				  };
		};


object
	text1 : XmText {
			arguments {
				  XmNx = 0;
				  XmNy = 40;
				  XmNheight = 250;
				  XmNwidth = 300;
				  XmNwordWrap = true;
				  XmNeditMode = XmMULTI_LINE_EDIT;
				  XmNeditable = false;
				  XmNbackground = wheat;
				  XmNforeground = navy;
				  XmNvalue = message;
				  };

		};
end module;
